<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background_gradient"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración de Alertas"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de alerta:"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/rgAlertType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rbSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solo sonido"
            android:textColor="@color/white"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solo vibración"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/rbBoth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambos"
            android:textColor="@color/white"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umbrales de distancia (cm):"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etMaxDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distancia Máxima (ej: 125)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="#B0FFFFFF"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etMinDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distancia Mínima (ej: 5)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="#B0FFFFFF"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etPanicThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Umbral Pánico (ej: 30)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="#B0FFFFFF"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Configuración"
        android:textSize="18sp"
        android:backgroundTint="@color/green"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnBackToMainFromSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Inicio"
        android:textSize="18sp"
        android:backgroundTint="@color/teal_700"/>

</LinearLayout>